<!-- From example: https://github.com/pirobot/rbx1 -->
<launch>

    <!-- Run the map server with the desired map -->
    <node name="map_server" pkg="map_server" type="map_server" args="/move-base-configs/maps/test_map.yaml" />

    <!-- The move_base node -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" clear_params="true" output="screen">
        <rosparam file="/move-base-configs/blind/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="/move-base-configs/blind/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="/move-base-configs/blind/config/local_costmap_params.yaml" command="load" />
        <rosparam file="/move-base-configs/blind/config/global_costmap_params.yaml" command="load" />
        <rosparam file="/move-base-configs/blind/config/base_local_planner_params.yaml" command="load" />
        <rosparam file="/move-base-configs/test/config/nav_test_params.yaml" command="load" />
    </node>

    <!-- Run fake localization compatible with AMCL output -->
    <node pkg="fake_localization" type="fake_localization" name="fake_localization" clear_params="true" output="screen">
        <remap from="base_pose_ground_truth" to="/zumo/differential_drive/odom" />
        <param name="global_frame_id" value="map" />
        <param name="base_frame_id" value="base_link" />
    </node>

    <!-- Start the navigation test -->
    <node pkg="move_base_test" type="nav_test.py" name="nav_test" output="screen">
        <param name="rest_time" value="1" />
        <param name="fake_test" value="true" />
    </node>

</launch>