<launch>
  <node pkg="differential_drive" type="pid_velocity.py" name="lpid_velocity" ns="zumo/differential_drive" required="true">
    <remap from="wheel" to="/zumo/left_ticks" />
    <remap from="motor_cmd" to="lmotor_cmd" />
    <remap from="wheel_vtarget" to="lwheel_vtarget" />
    <remap from="wheel_vel" to="lwheel_vel" />
  </node>
  <node name="left_pid_dynparam" pkg="dynamic_reconfigure" type="dynparam" args="set_from_parameters lpid_velocity" ns="zumo/differential_drive">
    <rosparam param="Kp">359</rosparam>
    <rosparam param="Ki">659</rosparam>
    <rosparam param="Kd">2</rosparam>
    <rosparam param="out_min">-400</rosparam>
    <rosparam param="out_max">400</rosparam>
    <rosparam param="rate">5</rosparam>
    <rosparam param="timeout_ticks">4</rosparam>
    <rosparam param="rolling_pts">5</rosparam>
    <rosparam param="ticks_meter">8000</rosparam>
  </node>

  <node pkg="differential_drive" type="pid_velocity.py" name="rpid_velocity" ns="zumo/differential_drive" required="true">
    <remap from="wheel" to="/zumo/right_ticks" />
    <remap from="motor_cmd" to="rmotor_cmd" />
    <remap from="wheel_vtarget" to="rwheel_vtarget" />
    <remap from="wheel_vel" to="rwheel_vel" />
  </node>
  <node name="right_pid_dynparam" pkg="dynamic_reconfigure" type="dynparam" args="set_from_parameters rpid_velocity" ns="zumo/differential_drive">
    <rosparam param="Kp">359</rosparam>
    <rosparam param="Ki">659</rosparam>
    <rosparam param="Kd">2</rosparam>
    <rosparam param="out_min">-400</rosparam>
    <rosparam param="out_max">400</rosparam>
    <rosparam param="rate">5</rosparam>
    <rosparam param="timeout_ticks">4</rosparam>
    <rosparam param="rolling_pts">5</rosparam>
    <rosparam param="ticks_meter">8000</rosparam>
  </node>

  <node pkg="differential_drive" type="twist_to_motors.py" name="twist_to_motors" output="screen" ns="zumo/differential_drive" required="true">
    <remap from="twist" to="cmd_vel" />
    <rosparam param="base_width">0.085</rosparam>
  </node>

  <node pkg="differential_drive" type="diff_tf.py" name="diff_tf" ns="zumo/differential_drive">
    <rosparam param="rate">5</rosparam>
    <rosparam param="base_width">0.085</rosparam>
    <rosparam param="ticks_meter">8000</rosparam>
    <remap from="rwheel" to="/zumo/right_ticks" />
    <remap from="lwheel" to="/zumo/left_ticks" />
  </node>

  <param name="robot_description" textfile="/differential-drive-configs/description.urdf" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
    <param name="publish_frequency" value="5.0" />
  </node>
</launch>